<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/resources/css/main.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script type="text/javascript" src="/resources/js/main.js"></script>
    <title>Document</title>
</head>
<body>
    <div class="container">
        <div class="jumbotron mt-5">
            <div class="container px-0 d-flex justify-content-between">
                <h1 class="display-3">View your listening history!</h1>
                <img src="/resources/images/spotify.png" width="100" height="100">
            </div>
            <hr class="my-4">
            <h3 class="display-5">My top </h3>
            <div class="type">
                <div class="list-group list-group-mine list-group-horizontal-md" id="list-tab" role="tablist">
                    <a class="list-group-item list-group-item-success list-group-item-action active" id="1" data-toggle="list" href="#list-home" role="tab" aria-controls="home">Tracks</a>
                    <a class="list-group-item list-group-item-success list-group-item-action" id="2" data-toggle="list" href="#list-profile" role="tab" aria-controls="profile">Artists</a>
                    <!-- <a class="list-group-item list-group-item-success list-group-item-action" id="3" data-toggle="list" href="#list-messages" role="tab" aria-controls="messages">Albums</a> -->
                </div>
            </div>
            <h3 class="mt-4">In the last</h3>
            <div class="time">
                <div class="list-group list-group-mine list-group-horizontal-md" id="list-tab" role="tablist">
                    <a class="list-group-item list-group-item-success list-group-item-action active" id="1" data-toggle="list" href="#list-home" role="tab" aria-controls="home">Several Years</a>
                    <a class="list-group-item list-group-item-success list-group-item-action" id="2" data-toggle="list" href="#list-profile" role="tab" aria-controls="profile">6 Months</a>
                    <a class="list-group-item list-group-item-success list-group-item-action" id="3" data-toggle="list" href="#list-messages" role="tab" aria-controls="messages">1 Month</a>
                </div>
            </div>         
        </div>

        <div class="container info">
            <div class="container show" id="11">
                <ul class="list-group list-group-flush">
                    <% topTracksLong.forEach(function(track, index) { %>
                        <li class="list-group-item list-group-item-secondary d-sm-flex align-items-center">
                            <h4><%= index+1 %>.</h4>
                            <img class="ml-5 track-image" src=<%= track.imageUrl %> height="100" width="100"> 
                            <h4 class="ml-5"> <%= track.name %></h4> 
                        </li>
                    <% }); %>
                </ul>  
            </div>
            <div class="container d-none" id="12">
                <ul class="list-group list-group-flush">
                    <% topTracksMedium.forEach(function(track, index) { %>
                        <li class="list-group-item list-group-item-secondary d-sm-flex align-items-center">
                            <h4><%= index+1 %>.</h4>
                            <img class="ml-5 track-image" src=<%= track.imageUrl %> height="100" width="100"> 
                            <h4 class="ml-5"> <%= track.name %></h4> 
                        </li>
                    <% }); %>
                </ul>              
            </div>
            <div class="container d-none" id="13">
                <ul class="list-group list-group-flush">
                    <% topTracksShort.forEach(function(track, index) { %>
                        <li class="list-group-item list-group-item-secondary d-sm-flex align-items-center">
                            <h4><%= index+1 %>.</h4>
                            <img class="ml-5 track-image" src=<%= track.imageUrl %> height="100" width="100"> 
                            <h4 class="ml-5"> <%= track.name %></h4> 
                        </li>
                    <% }); %>
                </ul>  
            </div>
            <div class="container d-none" id="21">
                <ul class="list-group list-group-flush">
                    <% topArtistsLong.forEach(function(artist, index) { %>
                        <li class="list-group-item list-group-item-secondary d-sm-flex align-items-center">
                            <h4><%= index+1 %>.</h4>
                            <img class="ml-5 artist-image" src=<%= artist.imageUrl %> height="100" width="100"> 
                            <h4 class="ml-5"> <%= artist.name %></h4> 
                        </li>
                    <% }); %>
                </ul>     
            </div>
            <div class="container d-none" id="22">
                <ul class="list-group list-group-flush">
                    <% topArtistsMedium.forEach(function(artist, index) { %>
                        <li class="list-group-item list-group-item-secondary d-sm-flex align-items-center">
                            <h4><%= index+1 %>.</h4>
                            <img class="ml-5 artist-image" src=<%= artist.imageUrl %> height="100" width="100"> 
                            <h4 class="ml-5"> <%= artist.name %></h4> 
                        </li>
                    <% }); %>
                </ul>
            </div>
            <div class="container d-none" id="23">
                <ol class="list-group list-group-flush">
                    <% topArtistsShort.forEach(function(artist, index) { %>
                        <li class="list-group-item list-group-item-secondary d-sm-flex align-items-center">
                            <h4><%= index+1 %>.</h4>
                            <img class="ml-5 artist-image" src=<%= artist.imageUrl %> height="100" width="100"> 
                            <h4 class="ml-5"> <%= artist.name %></h4> 
                        </li>
                    <% }); %>
                </ol>
            </div>
            <div class="container d-none" id="31">
                31
            </div>
            <div class="container d-none" id="32">
                32
            </div>
            <div class="container d-none" id="33">
                33
            </div>
            
        </div>
    </div>
</body>
</html>
